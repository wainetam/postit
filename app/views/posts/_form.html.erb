<div class="well">
<%= form_for @post do |f| %>
  <%= f.label :title, 'Input title' %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :url, 'Input URL' %>
  <%= f.text_field :url %>
  <br />
  <%= f.label :description, 'Description' %>
  <%= f.text_area :description %>
  <br />
  <%= f.label 'Categories' %>
  <%= collection_check_boxes(:post, :category_ids, @categories, :id, :name) do |c| %>
    <%= c.label(class: 'checkbox inline') {c.check_box(class: 'checkbox inline') + c.text} %>
  <% end %> 
  <br /> 
  <br />
  <%= f.submit 'Create Post', class: 'btn btn-primary' %>
<% end %>
</div>